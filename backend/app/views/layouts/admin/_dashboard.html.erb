<!-- _dashboard.html.erb -->
<%= stylesheet_link_tag 'dashboard', media: 'all', 'data-turbolinks-track': 'reload' %>
<div class="grid-container">
  <!-- Display Digital Art -->
  <div class="dynamic-height-grid-item" style="height: 500px">
    <div class="image-container">
      <%= image_tag('dashboard/digital_art.gif', alt: "Display Digital Art") %>
      <h3 class="title-base white">Display<br>Digital<br>Art</h3>
      <p class="subtitle">A single piece of art is<br>displayed on a loop</p>
      <a href="/admin/artworks">
        <button>Choose Artwork</button>
      </a>
    </div>
  </div>

  <!-- Curated Art Streams -->
  <div class="dynamic-height-grid-item" style="height: 500px">
    <div class="image-container">
      <%= image_tag('dashboard/art_streams.jpg', alt: "Curated Art Streams") %>
      <h3 class="title-base white">Curated<br>Art<br>Streams</h3>
      <p class="subtitle">Choose artworks and playlists for an art stream yourself or<br>opt for Upframe's curated one's</p>
      <a href="/admin/streams">
        <button>Choose Art Stream</button>
      </a>
    </div>
  </div>

  <!-- Spotify Cover Art -->
  <div class="dynamic-height-grid-item" style="height: 500px">
    <div class="image-container">
      <%= image_tag('dashboard/spotify.gif', alt: "Spotify Cover Art") %>
      <h3 class="title-base white">SpotifyÂ®<br>cover<br>Art</h3>
      <p class="subtitle">Link your Spotify account<br>to showcase album cover art<br>and dynamic canvases</p>
      <a href="/admin/settings">
        <button>Display Cover Art</button>
      </a>
    </div>
  </div>

  <!-- Settings -->
  <div class="dynamic-height-grid-item" style="height: 400px">
    <div class="image-container">
      <%= image_tag('dashboard/settings.png', alt: "Settings") %>
      <h3 class="title-base black">Settings</h3>
      <a href="/admin/developer">
        <button>General Settings</button>
      </a>
    </div>
  </div>

  <!-- Power -->
  <div class="dynamic-height-grid-item">
    <h3 class="title-base black">POWER</h3>
  </div>

  <!-- HON.Art Stream -->
  <div class="dynamic-height-grid-item" style="height: 323px">
    <div class="image-container">
      <%= image_tag('dashboard/hon_art_stream.gif', alt: "HON.ART STREAM") %>
      <h3 class="title-base white">LIMITED<br/><i>HON.ART</i><br/>STREAM</h3>
      <p class="subtitle">House of Nifty (HON) is a private collection, showcasing carefully curated tokenised digital masterpieces.</p>
      <button>Display Art Stream</button>
    </div>
  </div>

  <!-- Feedback -->
  <div class="dynamic-height-grid-item">
      <h3 class="title-base black">FEEDBACK</h3>
      <p class="subtitle">Our development team is always eager for fresh ideas to enhance the Upframe experience, making it a product that evolves with its users.</p>
      <button>Submit Feedback</button>
  </div>

  <!-- SMTS -->
  <div class="dynamic-height-grid-item">
    <div class="image-container" style="height: 400px;">
      <%= image_tag('dashboard/smts.gif', alt: "SMTS Logo") %>
  </div>
</div>
