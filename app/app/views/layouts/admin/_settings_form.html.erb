<%= stylesheet_link_tag 'settings_form', media: 'all', 'data-turbolinks-track': 'reload' %>
<%= form_with url: admin_settings_update_settings_path, method: :post, local: true, id: "settings-form" do |form| %>
  <%= form.fields_for :settings, settings_form do |ff| %>
    <fieldset class="fieldset">
      <legend class="legend">General</legend>
      <ol class="form-list">
        <li class="form-item">
          <%= ff.label :orientation, class: "form-label" %>
          <%= ff.select :orientation, Constants.orientations, selected: ff.object.orientation, include_blank: false, class: "form-select" %>
        </li>
      </ol>
    </fieldset>
    <fieldset class="fieldset">
      <legend class="legend">WiFi</legend>
      <ol class="form-list">
        <li class="form-item">
          <%= ff.label :country, class: "form-label" %>
          <%= ff.select :wifi_country, Constants.wifi_country_codes, selected: ff.object.wifi_country, include_blank: false, class: "form-select" %>
        </li>
        <li class="form-item">
          <%= ff.label :ssid, class: "form-label" %>
          <%= ff.text_field :wifi_ssid, value: ff.object.wifi_ssid, class: "form-input" %>
        </li>
        <li class="form-item">
          <%= ff.label :password, class: "form-label" %>
          <%= ff.password_field :wifi_password, value: ff.object.wifi_password, class: "form-input" %>
        </li>
      </ol>
    </fieldset>
    <br/>
    <fieldset class="fieldset">
      <legend class="legend">Spotify®</legend>
      <div class="form-item-with-control-to-the-left">
        <%= ff.check_box :canvas_feature_enabled, { class: "form-checkbox", checked_value: true, unchecked_value: false } %>
        <%= ff.label :canvas_feature_enabled, 'Canvas Feature Enabled', class: "form-label-with-control-to-the-left" %>
      </div>
      <br/>
      <div class="form-item-with-control-to-the-left">
        <%= link_to 'Connect to Spotify®', '/auth/spotify', class: "spotify-authenticate-button" %>
      </div>
      <br/>
    </fieldset>
  <div class="submit-button-container">
    <%= form.submit "Save Settings", class: "submit-button" %>
  </div>
  <% end %>
<% end %>
